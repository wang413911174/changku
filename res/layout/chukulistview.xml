<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/outbounds_id"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="序号"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="12sp" />
        <View
            android:layout_width="2dip"
            android:layout_height="match_parent"
            android:background="#ffffff" />
        <TextView
            android:id="@+id/outbounds_companyname"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="公司名称"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="12sp" />
        <View
            android:layout_width="2dip"
            android:layout_height="match_parent"
            android:background="#ffffff" />
        <TextView
            android:id="@+id/outbounds_dutyperson"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="负责人"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="12sp" />
        <View
            android:layout_width="2dip"
            android:layout_height="match_parent"
            android:background="#ffffff" />
        <TextView
            android:id="@+id/outbounds_telephone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="通讯电话"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="12sp" />
        <View
            android:layout_width="2dip"
            android:layout_height="match_parent"
            android:background="#ffffff" />
        <TextView
            android:id="@+id/outbounds_pname"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="商品名称"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="12sp" />
        <View
            android:layout_width="2dip"
            android:layout_height="match_parent"
            android:background="#ffffff" />
        <TextView
            android:id="@+id/outbounds_pguige"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="商品规格"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="12sp" />
        <View
            android:layout_width="2dip"
            android:layout_height="match_parent"
            android:background="#ffffff" />
        <TextView
            android:id="@+id/outbounds_pdanwei"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="商品单位"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="12sp" />
        <View
            android:layout_width="2dip"
            android:layout_height="match_parent"
            android:background="#ffffff" />
        <TextView
            android:id="@+id/outbounds_cost"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="出库单价"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="12sp" />
        <View
            android:layout_width="2dip"
            android:layout_height="match_parent"
            android:background="#ffffff" />
        <TextView
            android:id="@+id/outbounds_amount"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="出库总量"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="12sp" />
        <View
            android:layout_width="2dip"
            android:layout_height="match_parent"
            android:background="#ffffff" />
        <TextView
            android:id="@+id/outbounds_date"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="日期"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="12sp" />
        
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:background="#ffffff" />

</LinearLayout>
